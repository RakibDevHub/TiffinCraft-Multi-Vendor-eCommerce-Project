# Enable Rewrite Engine
RewriteEngine On

# Base URL for relative paths
RewriteBase /tiffincraft/

# Default route to public/index.php
RewriteRule ^$ public/index.php [L]

# Handle the register page
RewriteRule ^register$ views/layouts/register.php [L]
RewriteRule ^register.php$ views/layouts/register.php [L]

# TiffinCraft - Business
RewriteRule ^business$ views/layouts/tiffincraft-business.php [L]
RewriteRule ^business/$ views/layouts/tiffincraft-business.php [L]
RewriteRule ^business/register$ views/layouts/tiffincraft-business.php [L]
RewriteRule ^business/register/$ views/layouts/tiffincraft-business.php [L]
RewriteRule ^business/register.php$ views/layouts/tiffincraft-business.php [L]

# TiffinCraft - Admin
RewriteRule ^admin$ views/admin/login.php [L]
RewriteRule ^admin/$ views/admin/login.php [L]
RewriteRule ^admin/login$ views/admin/login.php [L]
RewriteRule ^admin/login/$ views/admin/login.php [L]
RewriteRule ^admin/login.php$ views/admin/login.php [L]
RewriteRule ^admin/dashboard$ views/admin/dashboard.php [L]
RewriteRule ^admin/dashboard/$ views/admin/dashboard.php [L]
RewriteRule ^admin/dashboard.php$ views/admin/dashboard.php [L]